# Hardhat Private Key (for deploying contracts and signing transactions)
PRIVATE_KEY="YOUR_ETHEREUM_PRIVATE_KEY"

# RPC URLs for different networks
MAINNET_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID"
BSC_RPC_URL="https://bsc-dataseed.binance.org/"
POLYGON_RPC_URL="https://polygon-rpc.com/"
BASE_RPC_URL="https://mainnet.base.org" # RPC for Base network

# Etherscan API Keys for contract verification
ETHERSCAN_API_KEY="YOUR_ETHERSCAN_API_KEY"
BSCSCAN_API_KEY="YOUR_BSCSCAN_API_KEY"
POLYGONSCAN_API_KEY="YOUR_POLYGONSCAN_API_KEY"

# Deployed Token Contract Address (after deployment)
TOKEN_ADDRESS="0xYourDeployedTokenContractAddress"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
WEBAPP_URL="https://your-game-webapp-url.com" # URL where your game is hosted
